{
  "name": "backend-template",
  "version": "1.0.0",
  "main": "dist/app/ApiServer.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json,md,yml}",
    "format:fix": "prettier --write src/**/*.{ts,js,json,md,yml} --fix",
    "test": "vitest run",
    "dev": "ts-node-dev --respawn src/server.ts",
    "health-check": "bash check-project-health.sh",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:status": "sequelize-cli db:migrate:status",
    "seed:all": "sequelize-cli db:seed:all",
    "seed:undo:all": "sequelize-cli db:seed:undo:all",
    "run:docker": "docker-compose up --build",
    "run:docker:test": "pnpm --filter backend-template test",
    "seed": "ts-node src/seeds/DatabaseSeeder.ts",
    "swagger": "pnpm --filter backend-template dev",
    "prestart": "mkdir -p logs"
  },
  "dependencies": {
    "axios-retry": "^4.5.0",
    "cors": "^2.8.5",
    "detect-port": "^2.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "logform": "^2.7.0",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.3",
    "zod-to-openapi": "npm:@asteasolutions/zod-to-openapi@^7.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^18.19.87",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "commitlint": "^19.8.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eventemitter3": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^3.1.2",
    "winston": "^3.17.0"
  }
}
