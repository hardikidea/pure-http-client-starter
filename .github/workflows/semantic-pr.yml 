name: ðŸš¨ Semantic Pull Request Titles

on:
  pull_request:
    types: [opened, edited, reopened]

jobs:
  semantic-pr:
    runs-on: ubuntu-latest
    steps:
      - uses: amannn/action-semantic-pull-request@v5
        with:
          types: |
            feat
            fix
            chore
            docs
            refactor
            test
            build
            ci
            perf
            style
          requireScope: false
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
